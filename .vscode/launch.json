  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Test Combinator",
      "type": "debugpy",
      "request": "launch",
      "program": "pcombinator/combinators/tests/test_combinator.py",
      "console": "integratedTerminal",
      // "justMyCode": false
    },
    {
      "name": "Debug Example.py",
      "type": "debugpy",
      "request": "launch",
      "program": "examples/text2text/example.py",
      "console": "integratedTerminal",
      // "justMyCode": false
    },
    // Debug all tests usint the pytest framework
    {
      "name": "Debug All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": "${workspaceFolder}/",
      "console": "integratedTerminal",
      // "justMyCode": false
    } 
  ]
}
